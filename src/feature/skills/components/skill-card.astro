---
import "./skill-card.scss";
import Item from "./skill-item.astro";

const {contents} = Astro.props;
const {category,subCategory,items,subCategory2,items2} = contents;
---

<div class="skill-card">
  <h4>{category}</h4>
  <ul class="skill-card__middle-categories">
    <li>
      <h5 class="skill-card__sub-category">{subCategory}</h5>
      <div class="skill-card__small-category">
      {
        items.map((item)=>(
                <Item
                    icon={item.icon}
                    name={item.skillName}
                />
        ))
      }
      </div>
    </li>
    <li>
      <h5 class="skill-card__sub-category">{subCategory2}</h5>
      <div class="skill-card__small-category">
      {
        items2.map((item)=>(
                <Item
                    icon={item.icon}
                    name={item.skillName}
                />
        ))
      }
      </div>
    </li>
  </ul>
</div>